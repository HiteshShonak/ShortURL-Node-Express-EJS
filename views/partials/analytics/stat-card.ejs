<!-- Stat Card Component -->
<div class="stat-card hover-trigger" onclick="openModal('<%= modalType %>')">
    <div>
        <div class="stat-value"><%= value %></div>
        <div class="stat-label">
            <%= label %> 
            <span style="font-size: 0.8rem; opacity: 0.6;">(Click for details)</span>
        </div>
    </div>
    <div class="stat-icon" style="background: <%= bgColor %>; color: <%= iconColor %>;">
        <i class="ph <%= icon %>"></i>
    </div>
</div>
